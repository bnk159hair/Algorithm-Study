   "source": [
    "import sys\n",
    "n = int(input())\n",
    "home = list(map(int, input().split()))\n",
    "\n",
    "min_val = sys.maxsize\n",
    "sum=0\n",
    "for i in range(n):\n",
    "    sum=0\n",
    "    for j in range(n):\n",
    "        if i != j:\n",
    "            sum += abs(i-j)*home[j]\n",
    "    if sum < min_val:\n",
    "        min_val = sum\n",
    "\n",
    "print(min_val)"
   ]
  }
